<p id="notice"><%= notice %></p>

<h1>API KEYS</h1>

<table>
  <thead>
    <tr>
      <th>API KEY</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @apis.each do |api| %>
      <% if api.account_id == current_account.id %>
        <tr>
          <td><%= api.value %></td>
          <td><%= link_to 'Show', api %></td>

          <td><%= link_to 'Destroy', api, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
      <% end %>
    </tbody>
</table>

<br>

<%= link_to 'New Api key', new_api_path %>
